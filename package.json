{
  "name": "@sendgrid/ui-components",
  "version": "0.12.0",
  "description": "Resuable UI components for Sendgrid's applications.",
  "main": "dist/ui-components.js",
  "scripts": {
    "start": "yarn run storybook",
    "build": "rollup -c rollup.config.ts",
    "lint": "tslint --project ./tsconfig.json",
    "lint-fix": "tslint --project ./tsconfig.json --fix",
    "test": "jest --coverage",
    "ci-test": "yarn lint && yarn test && yarn build-storybook",
    "storybook": "start-storybook -s ./ -p 6006",
    "build-storybook": "build-storybook",
    "prepublish": "yarn build",
    "precommit": "yarn lint-fix",
    "snapshot": "yarn test -u",
    "lint-snapshot": "yarn lint-fix && yarn snapshot"
  },
  "repository": "https://github.com/sendgrid/ui-components.git",
  "author": "SendGrid <careers@sendgrid.com>",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/style-guide": "^0.3.2",
    "@sendgrid/style-guide-grid": "^0.3.0",
    "@types/classnames": "^2.2.3",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "@types/storybook__addon-actions": "^3.0.3",
    "@types/storybook__react": "^3.0.7",
    "classnames": "^2.2.5",
    "lodash": "^4.17.5",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@storybook/addon-storyshots": "^3.3.15",
    "@storybook/react": "^3.3.15",
    "@types/acorn": "^4.0.3",
    "@types/chokidar": "^1.7.5",
    "@types/enzyme": "^3.1.9",
    "@types/jest": "^22.2.2",
    "@types/lodash": "^4.14.106",
    "@types/react-test-renderer": "^16.0.1",
    "awesome-typescript-loader": "^4.0.1",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "magic-string": "^0.24.0",
    "node-sass": "^4.7.2",
    "react-test-renderer": "^16.2.0",
    "regenerator-runtime": "^0.11.1",
    "rollup": "^0.57.1",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-typescript": "^0.8.1",
    "sass-loader": "^6.0.7",
    "source-map": "^0.7.2",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.20.3",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2",
    "webpack": "^4.2.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>jestSetup.js",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.test.(ts|tsx|js)"
    ]
  }
}
