{
  "name": "ui-components",
  "version": "0.0.1",
  "description": "Resuable UI components for Sendgrid's applications.",
  "main": "dist/index.js",
  "scripts": {
    "start": "yarn run storybook",
    "build": "tsc",
    "lint": "tslint --project ./tslint.json",
    "lint-fix": "tslint --project ./tslint.json --fix",
    "test": "jest --coverage",
    "ci-test": "yarn lint && yarn test",
    "storybook": "start-storybook -s ./ -p 6006",
    "build-storybook": "build-storybook",
    "precommit": "yarn test"
  },
  "repository": "https://github.com/sendgrid/ui-components.git",
  "author": "SendGrid <careers@sendgrid.com>",
  "license": "MIT",
  "dependencies": {
    "@types/classnames": "^2.2.3",
    "@types/react-dom": "^16.0.0",
    "@types/storybook__addon-actions": "^3.0.1",
    "@types/storybook__react": "^3.0.5",
    "classnames": "^2.2.5",
    "raf": "^3.4.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "@storybook/addon-storyshots": "^3.2.12",
    "@storybook/react": "^3.2.13",
    "@types/enzyme": "^3.1.1",
    "@types/jest": "^21.1.5",
    "@types/react-test-renderer": "^16.0.0",
    "awesome-typescript-loader": "^3.2.3",
    "css-loader": "^0.28.4",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "extract-text-webpack-plugin": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "node-sass": "^4.5.3",
    "react-test-renderer": "^16.0.0",
    "regenerator-runtime": "^0.11.1",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.2",
    "style-loader": "^0.19.0",
    "ts-jest": "^21.1.3",
    "tslint": "^5.7.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.5.3",
    "webpack": "^3.10.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>jestSetup.js",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.test.(ts|tsx|js)"
    ]
  }
}
